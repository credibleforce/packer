{
  "builders": [
    {
      "name": "{{user `vm_name`}}",
      "boot_wait": "2m",
      "cpus": 2,
      "disk_adapter_type": "ide",
      "disk_size": "{{user `disk_size`}}",
      "floppy_files": [
        "{{user `autounattend`}}",
        "../shared/scripts/disable-winrm.ps1",
        "../shared/scripts/enable-winrm.ps1",
        "../shared/scripts/disable-screensaver.ps1",
        "../shared/scripts/microsoft-updates.bat",
        "../shared/scripts/unattend.xml",
        "../shared/scripts/win-updates.ps1",
        "{{ user `aws_unattend` }}"
      ],
      "guest_os_type": "windows8srv-64",
      "headless": true,
      "iso_checksum": "{{user `iso_checksum`}",
      "iso_url": "{{user `iso_url`}",
      "memory": "{{user `memory`}}",
      "shutdown_command": "shutdown /s /t 10 /f /d p:4:1 /c Packer_Provisioning_Shutdown",
      "shutdown_timeout": "3600m",
      
      "type": "vmware-iso","vmx_data": {
        "RemoteDisplay.vnc.enabled": "false",
        "RemoteDisplay.vnc.port": "5900"
      },
      "vm_name": "{{user `vm_name`}}",
      "vmx_remove_ethernet_interfaces": "{{user `vmx_remove_ethernet_interfaces`}}",
      "vnc_port_max": 5980,
      "vnc_port_min": 5900,
      "winrm_password": "vagrant",
      "winrm_timeout": "{{user `winrm_timeout`}}",
      "winrm_username": "vagrant"
    }
  ],
  "post-processors": [
    [
      {
        "keep_input_artifact": false,
        "output": "builds/{{.Provider}}-{{user `vm_name`}}.box",
        "type": "vagrant",
        "vagrantfile_template": "Vagrantfile"
      },
      {
          "inline": [
              "/usr/lib/vmware-ovftool/ovftool output-{{user `vm_name`}}/{{user `vm_name`}}.vmx {{user `vm_name`}}.ova"
          ],
          "type": "shell-local"
      },
      {
          "files": [
              "{{user `vm_name`}}.ova"
          ],
          "type": "artifice"
      },
      {
        "ami_name": "ami-{{user `vm_name`}}-latest-{{timestamp}}",
        "keep_input_artifact": true,
        "region": "us-east-1",
        "s3_bucket_name": "proservlab-images",
        "s3_key_name": "images/{{user `vm_name`}}.ova",
        "tags": {
          "Description": "packer amazon-import {{user `vm_name`}} OVA {{timestamp}}"
        },
        "type": "amazon-import"
      }
    ]
  ],
  "provisioners": [
    {
      "scripts": [
        "../shared/scripts/set-powerplan.ps1"
      ],
      "type": "powershell"
    },
    {
      "script": "../shared/scripts/win-8.1-update-windows-update-agent.ps1",
      "type": "powershell"
    },
    {
      "restart_timeout": "{{user `restart_timeout`}}",
      "type": "windows-restart"
    },
    {
      "script": "../shared/scripts/win-8.1-update-2015.ps1",
      "type": "powershell"
    },
    {
      "restart_timeout": "{{user `restart_timeout`}}",
      "type": "windows-restart"
    },
    {
      "script": "../shared/scripts/win-81-update-2019-09-update-rollup.ps1",
      "type": "powershell"
    },
    {
      "restart_timeout": "{{user `restart_timeout`}}",
      "type": "windows-restart"
    },

    {
      "script": "../shared/scripts/win-81-update-2019-10-update-rollup.ps1",
      "type": "powershell"
    },
    {
      "restart_timeout": "{{user `restart_timeout`}}",
      "type": "windows-restart"
    },
    {
      "script": "../shared/scripts/win-81-update-2020-01-update-rollup.ps1",
      "type": "powershell"
    },
    {
      "restart_timeout": "{{user `restart_timeout`}}",
      "type": "windows-restart"
    },
    {
      "script": "../shared/scripts/win-update-net48.ps1",
      "type": "powershell"
    },
    {
      "restart_timeout": "{{user `restart_timeout`}}",
      "type": "windows-restart"
    },
    {
      "script": "../shared/scripts/win-8.1-update-powershell-5.1.ps1",
      "type": "powershell"
    },
    {
      "restart_timeout": "{{user `restart_timeout`}}",
      "type": "windows-restart"
    },
    {
      "user": "vagrant",
      "use_proxy": false,
      "type": "ansible",
      "extra_arguments": [ 
        "-vvvv"
      ],
      "playbook_file": "../../ansible/make_inventory.yml",
      "inventory_directory": "{{pwd}}"
    },
    {
      "inline": [
          "POWERSHELL_VERSION=\"\" ansible-playbook -i \"{{pwd}}/inventory\" -vvvv -e ansible_connection=winrm -e ansible_ssh_port=5986 -e ansible_ssh_user=vagrant -e ansible_ssh_pass=vagrant -e ansible_winrm_operation_timeout_sec=60 -e ansible_winrm_read_timeout_sec=120 -e ansible_winrm_scheme=https -e ansible_winrm_transport=ntlm -e ansible_winrm_server_cert_validation=ignore \"{{pwd}}/../../ansible/windows_update_security_updates_play.yml\""
      ],
      "type": "shell-local"
    },
    {
      "inline": [
          "POWERSHELL_VERSION=\"\" ansible-playbook -i \"{{pwd}}/inventory\" -vvvv -e ansible_connection=winrm -e ansible_ssh_port=5986 -e ansible_ssh_user=vagrant -e ansible_ssh_pass=vagrant -e ansible_winrm_operation_timeout_sec=60 -e ansible_winrm_read_timeout_sec=120 -e ansible_winrm_scheme=https -e ansible_winrm_transport=ntlm -e ansible_winrm_server_cert_validation=ignore \"{{pwd}}/../../ansible/windows_update_play.yml\""
      ],
      "type": "shell-local"
    },
    {
      "inline": [
          "POWERSHELL_VERSION=\"\" ansible-playbook -i \"{{pwd}}/inventory\" -vvvv -e ansible_connection=winrm -e ansible_ssh_port=5986 -e ansible_ssh_user=vagrant -e ansible_ssh_pass=vagrant -e ansible_winrm_operation_timeout_sec=60 -e ansible_winrm_read_timeout_sec=120 -e ansible_winrm_scheme=https -e ansible_winrm_transport=ntlm -e ansible_winrm_server_cert_validation=ignore \"{{pwd}}/../../ansible/windows_vmtools_install.yml\""
      ],
      "type": "shell-local"
    },
    {
      "restart_timeout": "{{user `restart_timeout`}}",
      "type": "windows-restart"
    },
    {
      "scripts": [
        "../shared/scripts/enable-rdp.bat",
        "../shared/scripts/compile-dotnet-assemblies.bat",
        "../shared/scripts/compact.bat"
      ],
      "type": "windows-shell"
    },
    {
      "type": "powershell",
      "scripts": [
        "../shared/scripts/install-ec2launch.ps1"
      ]
    },
    {
      "type": "powershell",
      "inline": [
         "C:\\ProgramData\\Amazon\\EC2-Windows\\Launch\\Scripts\\InitializeInstance.ps1 -Schedule",
         "C:\\ProgramData\\Amazon\\EC2-Windows\\Launch\\Scripts\\SysprepInstance.ps1 -NoShutdown"
      ]
    }
  ],
  "variables": {
    "autounattend": "../shared/answer_files/2012/Autounattend.xml",
    "aws_unattend": "../shared/answer_files/amazon/AWS_Unattend.xml",
    "vm_name": "windows_2012",
    "disk_size": "61440",
    "disk_type_id": "1",
    "memory": "2048",
    "headless": "false",
    "hyperv_switchname": "{{env `hyperv_switchname`}}",
    "iso_checksum": "md5:8503997171f731d9bd1cb0b0edc31f3d",
    "iso_url": "http://care.dlservice.microsoft.com/dl/download/6/2/A/62A76ABB-9990-4EFC-A4FE-C7D698DAEB96/9600.17050.WINBLUE_REFRESH.140317-1640_X64FRE_SERVER_EVAL_EN-US-IR3_SSS_X64FREE_EN-US_DV9.ISO",
    "virtio_win_iso": "~/virtio-win.iso",
    "restart_timeout": "30m",
    "winrm_timeout": "6h",
    "vmx_remove_ethernet_interfaces": "false"
  }
}

