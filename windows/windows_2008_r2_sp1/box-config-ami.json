{
  "builders": [
    {
      "name": "{{user `vm_name`}}",
      "boot_wait": "2m",
      "communicator": "winrm",
      "cpus": 2,
      "disk_adapter_type":"ide",
      "disk_size": "{{user `disk_size`}}",
      "floppy_files": [
        "{{user `autounattend`}}",
        "../shared/scripts/fixnetwork.ps1",
        "../shared/scripts/disable-screensaver.ps1",
        "../shared/scripts/disable-winrm.ps1",
        "../shared/scripts/enable-winrm.ps1",
        "../shared/scripts/microsoft-updates.bat",
        "../shared/scripts/enable-tls12.bat",
        "../shared/scripts/unattend.xml",
        "../shared/scripts/win-updates.ps1",
        "../shared/scripts/sysprep.bat"
      ],
      "guest_os_type": "windows7srv-64",
      "headless": "{{user `headless`}}",
      "iso_checksum": "{{user `iso_checksum`}}",
      "iso_url": "{{user `iso_url`}}",
      "memory": "{{user `memory`}}",
      "shutdown_command": "shutdown /s /t 10 /f /d p:4:1 /c \"Packer Shutdown\"",
      "shutdown_timeout": "15m",
      "tools_upload_flavor": "windows",
      "type": "vmware-iso",
      "output_directory": "builds",
      "version": 14,
      "vm_name": "{{user `vm_name`}}",
      "vmx_data": {
        "RemoteDisplay.vnc.enabled": "false",
        "RemoteDisplay.vnc.port": "5900"
      },
      "vmx_remove_ethernet_interfaces": "{{user `vmx_remove_ethernet_interfaces`}}",
      "vnc_port_max": 5980,
      "vnc_port_min": 5900,
      "winrm_password": "vagrant",
      "winrm_timeout": "{{user `winrm_timeout`}}",
      "winrm_username": "vagrant",
      "winrm_use_ssl": "true",
      "winrm_insecure": "true",
      "winrm_use_ntlm": "true"
    }
  ],
  "post-processors": [
    [
      {
        "keep_input_artifact": false,
        "output": "{{user `vm_name`}}_{{.Provider}}.box",
        "type": "vagrant",
        "vagrantfile_template": "vagrantfile-{{user `vm_name`}}.template"
      },
      {
        "inline": [
            "/usr/lib/vmware-ovftool/ovftool output-{{user `vm_name`}}/{{user `vm_name`}}.vmx {{user `vm_name`}}.ova"
        ],
        "type": "shell-local"
      },
      {
          "files": [
              "{{user `vm_name`}}.ova"
          ],
          "type": "artifice"
      },
      {
        "ami_name": "ami-{{user `vm_name`}}-latest-{{timestamp}}",
        "keep_input_artifact": true,
        "region": "us-east-1",
        "s3_bucket_name": "proservlab-images",
        "s3_key_name": "images/{{user `vm_name`}}.ova",
        "tags": {
          "Description": "packer amazon-import {{user `vm_name`}} OVA {{timestamp}}"
        },
        "type": "amazon-import"
      }
    ]
  ],
  "provisioners": [
    {
      "script": "../shared/scripts/win-7-update-windows-update-agent.ps1",
      "type": "powershell"
    },
    {
      "restart_timeout": "{{user `restart_timeout`}}",
      "type": "windows-restart"
    },
    {
      "script": "../shared/scripts/win-update-net48.ps1",
      "type": "powershell"
    },
    {
      "restart_timeout": "{{user `restart_timeout`}}",
      "type": "windows-restart"
    },
    {
      "script": "../shared/scripts/win-7-update-powershell-5.1.ps1",
      "type": "powershell"
    },
    {
      "restart_timeout": "{{user `restart_timeout`}}",
      "type": "windows-restart"
    },
    {
      "user": "vagrant",
      "use_proxy": false,
      "extra_arguments": [ 
        "--extra-vars", "ansible_winrm_operation_timeout_sec=60 ansible_winrm_read_timeout_sec=120 ansible_winrm_scheme=https ansible_winrm_transport=ntlm ansible_python_interpreter=/usr/bin/python ansible_winrm_server_cert_validation=ignore", "-vvvv"
        
      ],
      "playbook_file": "../../ansible/windows_update_security_updates.yml",
      "type": "ansible"
    },
    {
      "restart_timeout": "{{user `restart_timeout`}}",
      "type": "windows-restart"
    },
    {
      "user": "vagrant",
      "use_proxy": false,
      "extra_arguments": [
        "--extra-vars", "ansible_winrm_operation_timeout_sec=60 ansible_winrm_read_timeout_sec=120 ansible_winrm_scheme=https ansible_winrm_transport=ntlm ansible_python_interpreter=/usr/bin/python ansible_winrm_server_cert_validation=ignore", "-vvvv"
      ],
      "playbook_file": "../../ansible/windows_update.yml",
      "type": "ansible"
    },
    {
      "restart_timeout": "{{user `restart_timeout`}}",
      "type": "windows-restart"
    },
    {
      "execute_command": "{{ .Vars }} cmd /c \"{{ .Path }}\"",
      "scripts": [
        "../shared/scripts/vm-guest-tools.bat",
        "../shared/scripts/enable-rdp.bat",
        "../shared/scripts/compile-dotnet-assemblies.bat",
        "../shared/scripts/enable-uac.bat",
        "../shared/scripts/compact.bat"
      ],
      "type": "windows-shell"
    }
  ],
  "variables": {
    "autounattend": "./answer_files/2008_r2/Autounattend.xml",
    "vm_name": "windows_2008_r2",
    "disk_size": "61440",
    "disk_type_id": "1",
    "memory": "2048",
    "headless": "false",
    "hyperv_switchname": "{{env `hyperv_switchname`}}",
    "iso_checksum": "sha256:30832ad76ccfa4ce48ccb936edefe02079d42fb1da32201bf9e3a880c8ed6312",
    "iso_url": "http://care.dlservice.microsoft.com/dl/download/7/5/E/75EC4E54-5B02-42D6-8879-D8D3A25FBEF7/7601.17514.101119-1850_x64fre_server_eval_en-us-GRMSXEVAL_EN_DVD.iso",
    "virtio_win_iso": "~/virtio-win.iso",
    "restart_timeout": "30m",
    "winrm_timeout": "6h",
    "vmx_remove_ethernet_interfaces": "false"
  }
}

