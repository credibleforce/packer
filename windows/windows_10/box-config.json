{
  "builders": [
    {
      "name": "{{user `vm_name`}}",
      "boot_command": "",
      "boot_wait": "6m",
      "communicator": "winrm",
      "cpus": 2,
      "disk_adapter_type": "ide",
      "disk_size": "{{user `disk_size`}}",
      "disk_type_id": "{{user `disk_type_id`}}",
      "floppy_files": [
        "{{user `autounattend`}}",
        "../shared/floppy/WindowsPowershell.lnk",
        "../shared/floppy/PinTo10.exe",
        "../shared/scripts/fixnetwork.ps1",
        "../shared/scripts/disable-screensaver.ps1",
        "../shared/scripts/disable-winrm.ps1",
        "../shared/scripts/enable-winrm.ps1",
        "../shared/scripts/microsoft-updates.bat",
        "../shared/scripts/enable-tls12.bat",
        "../shared/scripts/unattend.xml",
        "../shared/scripts/win-updates.ps1",
        "../shared/scripts/sysprep.bat"
      ],
      "guest_os_type": "windows9-64",
      "headless": "{{user `headless`}}",
      "iso_checksum": "{{user `iso_checksum`}}",
      "iso_url": "{{user `iso_url`}}",
      "memory": "{{user `memory`}}",
      "shutdown_command": "a:/sysprep.bat",
      "shutdown_timeout": "15m",
      "skip_compaction": true,
      
      "type": "vmware-iso",
      
      "version": 14,
      "vm_name": "{{user `vm_name`}}",
      "vmx_data": {
        "RemoteDisplay.vnc.enabled": "false",
        "RemoteDisplay.vnc.port": "5900"
      },
      "vmx_remove_ethernet_interfaces": "{{user `vmx_remove_ethernet_interfaces`}}",
      "vnc_port_max": 5980,
      "vnc_port_min": 5900,
      "winrm_password": "vagrant",
      "winrm_timeout": "{{user `winrm_timeout`}}",
      "winrm_username": "vagrant",
      "winrm_use_ssl": "true",
      "winrm_insecure": "true",
      "winrm_use_ntlm": "true"
    }
  ],
  "post-processors": [
    [
      {
        "keep_input_artifact": false,
        "output": "builds/{{.Provider}}-{{user `vm_name`}}.box",
        "type": "vagrant",
        "vagrantfile_template": "Vagrantfile"
      }
    ]
  ],
  "provisioners": [
    {
      "user": "vagrant",
      "use_proxy": false,
      "extra_arguments": [ 
        "--extra-vars", "ansible_winrm_operation_timeout_sec=60 ansible_winrm_read_timeout_sec=120 ansible_winrm_scheme=https ansible_winrm_transport=ntlm ansible_python_interpreter=/usr/bin/python ansible_winrm_server_cert_validation=ignore", "-vvvv"
        
      ],
      "playbook_file": "../../ansible/windows_update_security_updates.yml",
      "type": "ansible"
    },
    {
      "restart_timeout": "{{user `restart_timeout`}}",
      "type": "windows-restart"
    },
    {
      "user": "vagrant",
      "use_proxy": false,
      "extra_arguments": [
        "--extra-vars", "ansible_winrm_operation_timeout_sec=60 ansible_winrm_read_timeout_sec=120 ansible_winrm_scheme=https ansible_winrm_transport=ntlm ansible_python_interpreter=/usr/bin/python ansible_winrm_server_cert_validation=ignore", "-vvvv"
      ],
      "playbook_file": "../../ansible/windows_update.yml",
      "type": "ansible"
    },
    {
      "restart_timeout": "{{user `restart_timeout`}}",
      "type": "windows-restart"
    },
    {
      "execute_command": "{{ .Vars }} cmd /c \"{{ .Path }}\"",
      "remote_path": "/tmp/script.bat",
      "scripts": [
        "../shared/scripts/vm-guest-tools.bat",
        "../shared/scripts/enable-rdp.bat"
      ],
      "type": "windows-shell"
    },
    {
      "scripts": [
        "../shared/scripts/debloat-windows.ps1"
      ],
      "type": "powershell"
    },
    {
      "restart_timeout": "{{user `restart_timeout`}}",
      "type": "windows-restart"
    },
    {
      "scripts": [
        "../shared/scripts/set-powerplan.ps1"
      ],
      "type": "powershell"
    },
    {
      "execute_command": "{{ .Vars }} cmd /c \"{{ .Path }}\"",
      "remote_path": "/tmp/script.bat",
      "scripts": [
        "../shared/scripts/pin-powershell.bat",
        "../shared/scripts/compile-dotnet-assemblies.bat",
        "../shared/scripts/set-winrm-automatic.bat",
        "../shared/scripts/uac-enable.bat",
        "../shared/scripts/dis-updates.bat",
        "../shared/scripts/compact.bat"
      ],
      "type": "windows-shell"
    }
  ],
  "variables": {
    "autounattend": "../shared/answer_files/10/Autounattend.xml",
    "vm_name": "windows_10",
    "disk_size": "61440",
    "disk_type_id": "1",
    "memory": "2048",
    "headless": "false",
    "iso_checksum": "sha256:f1a4f2176259167cd2c8bf83f3f5a4039753b6cc28c35ac624da95a36e9620fc",
    "iso_url": "https://software-download.microsoft.com/download/pr/19041.264.200511-0456.vb_release_svc_refresh_CLIENTENTERPRISEEVAL_OEMRET_x64FRE_en-us.iso",
    "restart_timeout": "5m",
    "vhv_enable": "false",
    "virtio_win_iso": "~/virtio-win.iso",
    "winrm_timeout": "6h",
    "vmx_remove_ethernet_interfaces": "false"
  }
}
