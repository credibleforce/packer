{
  "builders": [
    {
      "name": "{{user `vm_name`}}",
      "boot_command": "",
      "boot_wait": "6m",
      "communicator": "winrm",
      "cpus": 2,
      "disk_adapter_type": "ide",
      "disk_size": "{{user `disk_size`}}",
      "disk_type_id": "{{user `disk_type_id`}}",
      "floppy_files": [
        "{{user `autounattend`}}",
        "../shared/floppy/WindowsPowershell.lnk",
        "../shared/floppy/PinTo10.exe",
        "../shared/scripts/fixnetwork.ps1",
        "../shared/scripts/disable-screensaver.ps1",
        "../shared/scripts/disable-winrm.ps1",
        "../shared/scripts/enable-winrm.ps1",
        "../shared/scripts/microsoft-updates.bat",
        "../shared/scripts/enable-tls12.bat",
        "../shared/scripts/unattend.xml",
        "../shared/scripts/win-updates.ps1",
        "{{ user `aws_unattend` }}"
      ],
      "guest_os_type": "windows9-64",
      "headless": "{{user `headless`}}",
      "iso_checksum": "{{user `iso_checksum`}}",
      "iso_url": "{{user `iso_url`}}",
      "memory": "{{user `memory`}}",
      "skip_compaction": true, 
      "type": "vmware-iso",
      "version": 14,
      "vm_name": "{{user `vm_name`}}",
      "vmx_data": {
        "RemoteDisplay.vnc.enabled": "false",
        "RemoteDisplay.vnc.port": "5900"
      },
      "vmx_remove_ethernet_interfaces": "{{user `vmx_remove_ethernet_interfaces`}}",
      "vnc_port_max": 5980,
      "vnc_port_min": 5900,
      "winrm_password": "{{user `winrm_password`}}",
      "winrm_timeout": "{{user `winrm_timeout`}}",
      "winrm_username": "{{user `winrm_username`}}",
      "winrm_use_ssl": "true",
      "winrm_insecure": "true",
      "winrm_use_ntlm": "true",
      "winrm_port": 5986
    }
  ],
  "post-processors": [
    [
      {
        "keep_input_artifact": false,
        "output": "builds/{{.Provider}}-{{user `vm_name`}}.box",
        "type": "vagrant",
        "vagrantfile_template": "Vagrantfile"
      },
      {
        "inline": [
            "/usr/lib/vmware-ovftool/ovftool output-{{user `vm_name`}}/{{user `vm_name`}}.vmx {{user `vm_name`}}.ova"
        ],
        "type": "shell-local"
      },
      {
          "files": [
              "{{user `vm_name`}}.ova"
          ],
          "type": "artifice"
      },
      {
        "ami_name": "ami-{{user `vm_name`}}-latest-{{timestamp}}",
        "keep_input_artifact": true,
        "region": "us-east-1",
        "s3_bucket_name": "proservlab-images",
        "s3_key_name": "images/{{user `vm_name`}}.ova",
        "tags": {
          "Description": "packer amazon-import {{user `vm_name`}} OVA {{timestamp}}"
        },
        "type": "amazon-import"
      }
    ]
  ],
  "provisioners": [
    {
      "scripts": [
        "../shared/scripts/set-powerplan.ps1"
      ],
      "type": "powershell"
    },
    {
      "user": "vagrant",
      "use_proxy": false,
      "type": "ansible",
      "extra_arguments": [ 
        "-vvvv",
        "-e","custom_inventory_file=\"{{pwd}}/inventory\""
      ],
      "playbook_file": "../../ansible/make_inventory.yml",
      "inventory_directory": "{{pwd}}"
    },
    {
      "inline": [
          "POWERSHELL_VERSION=\"\" ansible-playbook -i \"{{pwd}}/inventory\" -vvvv -e ansible_connection=winrm -e ansible_ssh_port=5986 -e ansible_ssh_user=\"{{user `winrm_username`}}\" -e ansible_ssh_pass=\"{{user `winrm_password`}}\" -e ansible_winrm_operation_timeout_sec=60 -e ansible_winrm_read_timeout_sec=120 -e ansible_winrm_scheme=https -e ansible_winrm_transport=ntlm -e ansible_winrm_server_cert_validation=ignore \"{{pwd}}/../../ansible/windows_update_security_updates_play.yml\""
      ],
      "type": "shell-local"
    },
    {
      "inline": [
          "POWERSHELL_VERSION=\"\" ansible-playbook -i \"{{pwd}}/inventory\" -vvvv -e ansible_connection=winrm -e ansible_ssh_port=5986 -e ansible_ssh_user=\"{{user `winrm_username`}}\" -e ansible_ssh_pass=\"{{user `winrm_password`}}\" -e ansible_winrm_operation_timeout_sec=60 -e ansible_winrm_read_timeout_sec=120 -e ansible_winrm_scheme=https -e ansible_winrm_transport=ntlm -e ansible_winrm_server_cert_validation=ignore \"{{pwd}}/../../ansible/windows_update_play.yml\""
      ],
      "type": "shell-local"
    },
    {
      "execute_command": "{{ .Vars }} cmd /c \"{{ .Path }}\"",
      "remote_path": "/tmp/script.bat",
      "scripts": [
        "../shared/scripts/enable-rdp.bat",
        "../shared/scripts/pin-powershell.bat",
        "../shared/scripts/compile-dotnet-assemblies.bat",
        "../shared/scripts/set-winrm-automatic.bat",
        "../shared/scripts/uac-enable.bat",
        "../shared/scripts/dis-updates.bat",
        "../shared/scripts/compact.bat"
      ],
      "type": "windows-shell"
    },
    {
      "inline": [
          "POWERSHELL_VERSION=\"\" ansible-playbook -i \"{{pwd}}/inventory\" -vvvv -e ansible_connection=winrm -e ansible_ssh_port=5986 -e ansible_ssh_user=\"{{user `winrm_username`}}\" -e ansible_ssh_pass=\"{{user `winrm_password`}}\" -e ansible_winrm_operation_timeout_sec=60 -e ansible_winrm_read_timeout_sec=120 -e ansible_winrm_scheme=https -e ansible_winrm_transport=ntlm -e ansible_winrm_server_cert_validation=ignore \"{{pwd}}/../../ansible/windows_ec2prep.yml\""
      ],
      "type": "shell-local"
    }
  ],
  "variables": {
    "autounattend": "../shared/answer_files/10/Autounattend.xml",
    "aws_unattend": "../shared/answer_files/amazon/AWS_Unattend.xml",
    "disk_size": "61440",
    "disk_type_id": "1",
    "memory": "2048",
    "headless": "false",
    "iso_checksum": "sha256:f1a4f2176259167cd2c8bf83f3f5a4039753b6cc28c35ac624da95a36e9620fc",
    "iso_url": "https://software-download.microsoft.com/download/pr/19041.264.200511-0456.vb_release_svc_refresh_CLIENTENTERPRISEEVAL_OEMRET_x64FRE_en-us.iso",
    "restart_timeout": "5m",
    "vhv_enable": "false",
    "virtio_win_iso": "~/virtio-win.iso",
    "vm_name": "windows_10",
    "winrm_timeout": "6h",
    "vmx_remove_ethernet_interfaces": "false",
    "winrm_username": "administrator",
    "winrm_password": "myTempPassword123"
  }
}
