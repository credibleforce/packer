{
  "builders": [
    {
      "name": "{{user `vm_name`}}",
      "boot_command": "",
      "boot_wait": "6m",
      "communicator": "winrm",
      "cpus": 2,
      "disk_adapter_type":"ide",
      "disk_size": "{{user `disk_size`}}",
      "disk_type_id": "{{user `disk_type_id`}}",
      "floppy_files": [
        "{{user `autounattend`}}",
        "../shared/floppy/WindowsPowershell.lnk",
        "../shared/scripts/fixnetwork.ps1",
        "../shared/scripts/disable-screensaver.ps1",
        "../shared/scripts/disable-winrm.ps1",
        "../shared/scripts/enable-winrm.ps1",
        "../shared/scripts/microsoft-updates.bat",
        "../shared/scripts/enable-tls12.bat",
        "../shared/scripts/unattend.xml",
        "../shared/scripts/win-updates.ps1",
        "{{ user `aws_unattend` }}"
      ],
      "guest_os_type": "windows7-64",
      "headless": "{{user `headless`}}",
      "iso_checksum": "{{user `iso_checksum`}}",
      "iso_url": "{{user `iso_url`}}",
      "memory": "{{user `memory`}}",
      "shutdown_command": "shutdown /s /t 60 /f /c Packer_Provisioning_Shutdown",
      "shutdown_timeout": "3600m",
      "skip_compaction": true,
      "type": "vmware-iso",
      "version": 14,
      "vm_name": "{{user `vm_name`}}",
      "vmx_data": {
        "RemoteDisplay.vnc.enabled": "false",
        "RemoteDisplay.vnc.port": "5900"
      },
      "vmx_remove_ethernet_interfaces": "{{user `vmx_remove_ethernet_interfaces`}}",
      "vnc_port_max": 5980,
      "vnc_port_min": 5900,
      "winrm_password": "{{user `winrm_password`}}",
      "winrm_timeout": "{{user `winrm_timeout`}}",
      "winrm_username": "{{user `winrm_username`}}",
      "winrm_use_ssl": "true",
      "winrm_insecure": "true",
      "winrm_use_ntlm": "true",
      "winrm_port": 5986
    }
  ],
  "post-processors": [
    [
      {
        "keep_input_artifact": false,
        "output": "builds/{{.Provider}}-{{user `vm_name`}}.box",
        "type": "vagrant",
        "vagrantfile_template": "Vagrantfile"
      },
      {
          "inline": [
              "/usr/lib/vmware-ovftool/ovftool output-{{user `vm_name`}}/{{user `vm_name`}}.vmx {{user `vm_name`}}.ova"
          ],
          "type": "shell-local"
      },
      {
          "files": [
              "{{user `vm_name`}}.ova"
          ],
          "type": "artifice"
      },
      {
        "ami_name": "ami-{{user `vm_name`}}-latest-{{timestamp}}",
        "keep_input_artifact": true,
        "region": "us-east-1",
        "s3_bucket_name": "proservlab-images",
        "s3_key_name": "images/{{user `vm_name`}}.ova",
        "tags": {
          "Description": "packer amazon-import {{user `vm_name`}} OVA {{timestamp}}"
        },
        "type": "amazon-import"
      }
    ]
  ],
  "provisioners": [
    {
      "scripts": [
        "../shared/scripts/set-powerplan.ps1"
      ],
      "type": "powershell"
    },
    {
      "script": "../shared/scripts/win-7-update-sp1.ps1",
      "type": "powershell"
    },
    {
      "restart_timeout": "{{user `restart_timeout`}}",
      "type": "windows-restart"
    },
    {
      "script": "../shared/scripts/win-7-update-root-certificates.ps1",
      "type": "powershell"
    },
    {
      "restart_timeout": "{{user `restart_timeout`}}",
      "type": "windows-restart"
    },
    {
      "script": "../shared/scripts/win-7-update-windows-update-agent.ps1",
      "type": "powershell"
    },
    {
      "restart_timeout": "{{user `restart_timeout`}}",
      "type": "windows-restart"
    },
    {
      "script": "../shared/scripts/win-update-net48.ps1",
      "type": "powershell"
    },
    {
      "restart_timeout": "{{user `restart_timeout`}}",
      "type": "windows-restart"
    },
    {
      "script": "../shared/scripts/win-7-update-powershell-5.1.ps1",
      "type": "powershell"
    },
    {
      "restart_timeout": "{{user `restart_timeout`}}",
      "type": "windows-restart"
    },
    {
      "user": "vagrant",
      "use_proxy": false,
      "type": "ansible",
      "extra_arguments": [ 
        "-vvvv",
        "-e","custom_inventory_file=\"{{pwd}}/inventory\""
      ],
      "playbook_file": "../../ansible/make_inventory.yml",
      "inventory_directory": "{{pwd}}"
    },
    {
      "inline": [
          "POWERSHELL_VERSION=\"\" ansible-playbook -i \"{{pwd}}/inventory\" -vvvv -e ansible_connection=winrm -e ansible_ssh_port=5986 -e ansible_ssh_user=vagrant -e ansible_ssh_pass=vagrant -e ansible_winrm_operation_timeout_sec=60 -e ansible_winrm_read_timeout_sec=120 -e ansible_winrm_scheme=https -e ansible_winrm_transport=ntlm -e ansible_winrm_server_cert_validation=ignore \"{{pwd}}/../../ansible/windows_update_security_updates_play.yml\""
      ],
      "type": "shell-local"
    },
    {
      "inline": [
          "POWERSHELL_VERSION=\"\" ansible-playbook -i \"{{pwd}}/inventory\" -vvvv -e ansible_connection=winrm -e ansible_ssh_port=5986 -e ansible_ssh_user=vagrant -e ansible_ssh_pass=vagrant -e ansible_winrm_operation_timeout_sec=60 -e ansible_winrm_read_timeout_sec=120 -e ansible_winrm_scheme=https -e ansible_winrm_transport=ntlm -e ansible_winrm_server_cert_validation=ignore \"{{pwd}}/../../ansible/windows_update_play.yml\""
      ],
      "type": "shell-local"
    },
    {
      "script": "../shared/scripts/win-7-update-KB2999226.ps1",
      "type": "powershell"
    },
    {
      "restart_timeout": "{{user `restart_timeout`}}",
      "type": "windows-restart"
    },
    {
      "execute_command": "{{ .Vars }} cmd /c \"{{ .Path }}\"",
      "scripts": [
        "../shared/scripts/enable-rdp.bat",
        "../shared/scripts/pin-powershell.bat",
        "../shared/scripts/compile-dotnet-assemblies.bat",
        "../shared/scripts/set-winrm-automatic.bat",
        "../shared/scripts/uac-enable.bat",
        "../shared/scripts/dis-updates.bat",
        "../shared/scripts/compact.bat",
        "../shared/scripts/complete-setup.bat"
      ],
      "type": "windows-shell"
    },
    {
      "inline": [
          "POWERSHELL_VERSION=\"\" ansible-playbook -i \"{{pwd}}/inventory\" -vvvv -e ansible_connection=winrm -e ansible_ssh_port=5986 -e ansible_ssh_user=vagrant -e ansible_ssh_pass=vagrant -e ansible_winrm_operation_timeout_sec=60 -e ansible_winrm_read_timeout_sec=120 -e ansible_winrm_scheme=https -e ansible_winrm_transport=ntlm -e ansible_winrm_server_cert_validation=ignore \"{{pwd}}/../../ansible/windows_ec2prep.yml\""
      ],
      "type": "shell-local"
    }
  ],
  "variables": {
    "autounattend": "../shared/answer_files/7/Autounattend.xml",
    "aws_unattend": "../shared/answer_files/amazon/AWS_Unattend.xml",
    "disk_size": "61440",
    "memory": "2048",
    "headless": "false",
    "iso_checksum": "md5:1d0d239a252cb53e466d39e752b17c28",
    "iso_url": "http://care.dlservice.microsoft.com/dl/download/evalx/win7/x64/EN/7600.16385.090713-1255_x64fre_enterprise_en-us_EVAL_Eval_Enterprise-GRMCENXEVAL_EN_DVD.iso",
    "restart_timeout": "20m",
    "vhv_enable": "false",
    "virtio_win_iso": "~/virtio-win.iso",
    "vm_name": "windows_7",
    "winrm_timeout": "6h",
    "vmx_remove_ethernet_interfaces": "false",
    "winrm_username": "vagrant",
    "winrm_password": "vagrant"
  }
}

